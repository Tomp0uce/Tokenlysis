APP_VERSION=dev
CORS_ORIGINS=http://localhost
CG_TOP_N=20
CG_DAYS=14
LOG_LEVEL=INFO

# CoinGecko
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=your_key_here
COINGECKO_PLAN=demo
CG_MONTHLY_QUOTA=10000
CG_PER_PAGE_MAX=250
CG_ALERT_THRESHOLD=0.7

# Scheduling
REFRESH_CRON=0 */12 * * *

# Budget persistence
BUDGET_FILE=/volume1/docker/tokenlysis/meta/cg_budget.json

# Database
DATABASE_URL=sqlite:////volume1/docker/tokenlysis/db/tokenlysis.db
# For Postgres later: postgresql+psycopg://user:pass@host:5432/tokenlysis

# Fallback/Seed
USE_SEED_ON_FAILURE=true
SEED_FILE=./backend/app/seed/top20.json

# DB_PASSWORD=your_db_password  # reserved for MVP
